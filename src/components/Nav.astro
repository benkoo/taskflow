---
// src/components/Nav.astro

interface NavItem {
  id: string;
  name: string;
  href: string;
}

const { currentPath } = Astro.props;

// Helper function to determine if a link is active
const isActive = (path: string) => currentPath === path;

// Navigation items with unique IDs
const navItems: NavItem[] = [
  { id: 'home', name: 'Home', href: '/' },
  { id: 'install', name: 'Install PWA', href: '/pwa-install' },
];

---

<nav class="bg-white shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <a href="/" class="text-xl font-bold text-blue-600">TaskFlow</a>
        </div>
        <ul class="hidden sm:ml-6 sm:flex sm:space-x-8">
          {navItems.map((item) => (
            <li>
              <a 
                href={item.href}
                class={`${
                  isActive(item.href)
                    ? 'border-blue-500 text-gray-900'
                    : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'
                } inline-flex items-center px-1 pt-1 border-b-2 text-sm font-medium`}
                aria-current={isActive(item.href) ? 'page' : undefined}
              >
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Mobile menu, show/hide based on menu state. -->
  <ul class="sm:hidden" id="mobile-menu">
    {navItems.map((item) => (
      <li class="pt-2 pb-3 space-y-1">
        <a
          href={item.href}
          class={`block pl-3 pr-4 py-2 border-l-4 text-base font-medium ${
            isActive(item.href)
              ? 'border-blue-500 text-blue-700 bg-blue-50'
              : 'border-transparent text-gray-600 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-800'
          }`}
          aria-current={isActive(item.href) ? 'page' : undefined}
        >
          {item.name}
        </a>
      </li>
    ))}
  </ul>
</nav>
